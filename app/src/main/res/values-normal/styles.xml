<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/button_color</item>
        <item name="colorControlActivated">@color/selected_green</item>
    </style>

    <style name="special_button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/selected_green</item>
        <item name="colorButtonNormal">#00FFFFFF</item>
    </style>

    <style name="ThemeToolbar" parent="ThemeOverlay.AppCompat.Dark">

        <!-- navigation icon color -->
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
